<h3>Edit Collection</h3>

<% records.each do |vinyl| %>
    <h3><%= vinyl['artist_name']  %>  <%= vinyl['album_name'] %></h3>
    <img src="<%= vinyl['img_url'] %>" alt="">

    <form action="/delete_from_collection" method="POST">

        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="id" value="<%= vinyl['id'] %>">
        
        <button>Remove From Collection</button>
    </form>
<% end %>